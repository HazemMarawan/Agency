                                                    <div class="statbox widget box box-shadow">
                                                        <div class="widget-content widget-content-area">
                                                            <div class="row">
                                                                <div class="col-sm-12">
                                                                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                                                                        <div class="carousel-inner">
                                                                            @foreach (var hotelImage in Model.HotelImagesVM)
                                                                            {
                                                                                string activeImage = String.Empty;
                                                                                if (ImagesCounter == 1)
                                                                                {
                                                                                    activeImage = "active";
                                                                                }
                                                                                <div class="carousel-item @activeImage">
                                                                                    <img class="d-block w-100" src="@hotelImage.path" alt="@ImagesCounter slide">
                                                                                </div>
                                                                                ImagesCounter++;
                                                                            }
                                                                        </div>
                                                                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                                            <span class="sr-only">Previous</span>
                                                                        </a>
                                                                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                                            <span class="sr-only">Next</span>
                                                                        </a>
                                                                    </div>

                                                                </div>
                                                                <div class="col-sm-12">
                                                                    <ol class="carousel-indicators">
                                                                        @{ ImagesCounter = 1; }
                                                                        
                                                                        @foreach (var hotelImage in Model.HotelImagesVM)
                                                                        {
                                                                            string activeIndicator = String.Empty;
                                                                            if (ImagesCounter == 1)
                                                                            {
                                                                                activeIndicator = "active";
                                                                            }
                                                                                <li data-target="#carouselExampleIndicators" data-slide-to="@(ImagesCounter-1)" class="@activeIndicator m">
                                                                                    <img class="d-block w-100" width="90" height="90" src="@hotelImage.path" alt="@ImagesCounter slide">
                                                                                </li>
                                                                            ImagesCounter++;
                                                                        }
                                                                    </ol>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

