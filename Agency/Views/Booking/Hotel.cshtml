    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container " id="container">
        <!--  BEGIN CONTENT PART  -->
        <div id="content" class="main-content">
            <div class="layout-px-spacing">
                <div class="Event-Header row">
                    <div class="eventLogo offset-2 col-2">
                        @if (Model.HotelImagesVM.Count != 0)
                        {
                            <img width="90" height="90" src="@Model.HotelImagesVM[0].path">
                        } 
                        else
                        {
                            <img width="90" height="90" src="~/images/default_hotel_image.jpg">
                        }
                    </div>
                    <div class="eventHeading col-8">
                        <h2>@Model.title</h2>
                        <p>
                            @Model.event_from.ToString().Split(' ')[0] to @Model.event_to.ToString().Split(' ')[0] @Model.event_location
                        </p>
                    </div>
                </div>

                <div class="hotel-data row">
                    <div class="hotel-sum-info offset-1 col-3 text-center">
                        <div class="card-header" style="border-top-left-radius: 25px; border-top-right-radius: 25px;">
                            <h3>
                                @Model.name
                            </h3>
                        </div>
                        <div class="rateWrapper">
                            <div class="rate">
                                <span> $229 </span> <span aria-hidden="true">USD</span> | <abbr title="Average per night">avg/night</abbr>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="hotelDistance">
                                <p> Distance <span>@Model.hotel_location_distance </span></p>

                            </div>
                            <div class="hotelRate">
                                <p>
                                    <span>rate</span>
                                    @if (Model.rating == 0 || Model.rating == null)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/0.png" width="90" alt="Rate">
                                    }
                                    else if (Model.rating == 1)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/1.png" width="20" alt="Rate">
                                    }
                                    else if (Model.rating == 1.5)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/1.5.png" width="35" alt="Rate">
                                    }
                                    else if (Model.rating == 2)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/2.png" width="35" alt="Rate">
                                    }
                                    else if (Model.rating == 2.5)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/2.5.png" width="55" alt="Rate">
                                    }
                                    else if (Model.rating == 3)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/3.png" width="55" alt="Rate">
                                    }
                                    else if (Model.rating == 3.5)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/3.5.png" width="70" alt="Rate">
                                    }
                                    else if (Model.rating == 4)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/4.png" width="70" alt="Rate">
                                    }
                                    else if (Model.rating == 4.5)
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/4.5.png" width="90" alt="Rate">
                                    }
                                    else
                                    {
                                        <img src="~/Content/AdminPanelAssets/assets/img/Stars/5.png" width="90" alt="Rate">
                                    }

                                </p>
                            </div>
                        </div>
                        <div class="hotel-overView" style="margin-top: 10px">
