@model Agency.ViewModel.EventViewModel
@using Agency.Enums;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Agency Events</title>
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <link href="~/Content/AdminPanelAssets/assets/css/loader.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/AdminPanelAssets/assets/js/loader.js"></script>
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&display=swap" rel="stylesheet">
    <link href="~/Content/AdminPanelAssets/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/AdminPanelAssets/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome/css/all.min.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- Added css style by AA  1st one for all animations and second for my edit-->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="~/Content/AdminPanelAssets/assets/css/customizedByAbdullah2.css" rel="stylesheet" type="text/css" />
</head>
<body class="alt-menu sidebar-noneoverflow separted-page">
    <!-- BEGIN LOADER -->
    <div id="load_screen">
        <div class="loader">
            <div class="loader-content">
                <div class="spinner-grow align-self-center"></div>
            </div>
        </div>
    </div>
    <!--  END LOADER -->
    <!--  BEGIN NAVBAR  -->
    <div class="header-container">
        <header class="header navbar navbar-expand-sm">
            <div class="nav-logo align-self-center">
                <a class="navbar-brand" href="index.html"><img src="~/Content/AdminPanelAssets/assets/img/CHECKINNOWLOGO.jpeg" style="width: auto;height:40px" /></a>
            </div>
        </header>
    </div>
    <!--  END NAVBAR  -->
    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container " id="container">
        <!--  BEGIN CONTENT PART  -->
        <div id="content" class="main-content">
            <div class="layout-px-spacing">
                <div class="Event-Header row">
                    <div class="eventLogo offset-2 col-2">
                        <a href="#" target="_blank"><img src="~/Content/AdminPanelAssets/assets/img/90x90.jpg"></a>
                    </div>
                    <div class="eventHeading col-8">
                        <h2>@Model.title</h2>
                        <p>
                            @Model.event_from.ToString().Split(' ')[0] @Model.location_name
                        </p>
                    </div>
                </div>
                <div class="hotels row col-11">
                    @foreach(var hotel in Model.hotels)
                    {
                    <div class="card offset-1 col-3 text-center">
                        <div class="card-header">
                            <h3>
                                @hotel.name
                            </h3>
                        </div>
                        @if (hotel.hotelImages.Count != 0)
                        {
                            <a href="@Url.Action("Hotel","Booking",new { id = hotel.event_hotel_id})"><img width="300" height="400" class="hotelImg" src="@hotel.hotelImages[0].path" alt=""></a>
                        }
                        else
                        {
                            <a href="@Url.Action("Hotel","Booking",new { id = hotel.event_hotel_id})">
                                <img width="300" height="400"  class="hotelImg" src="https://i.travelapi.com/hotels/19000000/18230000/18228600/18228514/0577d0d6_b.jpg" alt="">
                            </a>
                        }
                            <div class="rateWrapper">
                                <div class="rate">
                                    <span> @hotel.single_price </span>
                                    <div class="ratedesc">
                                        <span aria-hidden="true">@Enum.GetName(typeof(Currency), hotel.currency),</span> | <abbr title="Average per night">avg/night</abbr>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer row">
                                <div class="hotelDistance col-5">
                                    <p> Distance</p>
                                    <span>@hotel.distance </span>
                                </div>
                                <div class="hotelRate col-7">
                                    <p>
                                        Rate
                                    </p>
                                    <div>
                                        @if (hotel.fixed_rate == 1)
                                        {
                                            <i class="fas fa-star checked"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        }
                                        else if (hotel.fixed_rate == 2)
                                        {
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        }
                                        else if (hotel.fixed_rate == 3)
                                        {
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        }
                                        else if (hotel.fixed_rate == 4)
                                        {
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fa fa-star"></i>
                                        }
                                        else if (hotel.fixed_rate == 5)
                                        {
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                            <i class="fas fa-star checked"></i>
                                        }


                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!--  END CONTENT PART  -->

    </div>
    <!-- END MAIN CONTAINER -->
    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="~/Content/AdminPanelAssets/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="~/Content/AdminPanelAssets/bootstrap/js/popper.min.js"></script>
    <script src="~/Content/AdminPanelAssets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/AdminPanelAssets/plugins/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Content/AdminPanelAssets/assets/js/app.js"></script>
    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>
    <script src="~/Content/AdminPanelAssets/assets/js/custom.js"></script>
    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
    <script src="~/Content/AdminPanelAssets/plugins/apex/apexcharts.min.js"></script>
    <script src="~/Content/AdminPanelAssets/assets/js/dashboard/dash_1.js"></script>
    <script src="~/Content/AdminPanelAssets/plugins/table/datatable/datatables.js"></script>

</body>
</html>




